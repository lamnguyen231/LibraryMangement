<Window x:Class="LibraryPRN.BookDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryPRN"
        mc:Ignorable="d"
        Title="Book Details" Height="450" Width="400">
    <Grid>
        <GroupBox Grid.Column="1" Grid.Row="1" Foreground="White" Background="#1e1e1e">
            <StackPanel Margin="10">
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="ID:" Width="100" Foreground="White"/>
                    <TextBox x:Name="BookID" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Title:" Width="100" Foreground="White"/>
                    <TextBox x:Name="BookTitle" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Author ID:" Width="100" Foreground="White"/>
                    <TextBox x:Name="AuthorID" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center" IsEnabled="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Author:" Width="100" Foreground="White"/>
                    <TextBox x:Name="AuthorName" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Birth Year:" Width="100" Foreground="White"/>
                    <TextBox x:Name="AuthorBirthYear" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Nationality:" Width="100" Foreground="White"/>
                    <TextBox x:Name="AuthorNationality" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Genre:" Width="100" Foreground="White"/>
                    <ComboBox x:Name="BookGenre" Width="200" BorderThickness="0" VerticalAlignment="Center" SelectionChanged="BookGenre_SelectionChanged"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Publication Year:" Width="100" Foreground="White"/>
                    <TextBox x:Name="BookPublicationYear" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="ISBN:" Width="100" Foreground="White"/>
                    <TextBox x:Name="BookISBN" Width="Auto" Background="#1e1e1e" Foreground="LightGray" BorderThickness="0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                    <Button x:Name="btnBookSave" Content="Save" Width="75" Margin="5" Click="BtnBookSave_Click" />
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
