<Window x:Class="LibraryPRN.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryPRN"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" WindowStartupLocation="CenterScreen" Background="#2D2D2D">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Email:" Margin="5" FontFamily="Arial Narrow" FontSize="12pt" Foreground="White"/>
            <TextBox x:Name="txtMemberMail" Width="200" Margin="5" TextAlignment="Left"/>

            <Label Content="Password:" Margin="5" FontFamily="Arial Narrow" FontSize="12pt" Foreground="White"/>
            <PasswordBox x:Name="txtPassword" Width="200" Margin="5" />

            <Button Content="Login" Width="100" Margin="10" Click="BtnLogin_Click" IsDefault="True"/>
        </StackPanel>
    </Grid>
</Window>
